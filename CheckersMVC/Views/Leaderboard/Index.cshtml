@model IEnumerable<CheckersMVC.Models.PlayerStats>

@{
    ViewBag.Title = "Index";
    ViewBag.iter = 0;
}

<h2>Leaderboard</h2>

<table class="table">
    <tr>
        <th>
           Place
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesPlayedCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesWonCount)
        </th>
        <th>
            Ratio
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(++ViewBag.iter)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesPlayedCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesWonCount)
        </td>
        <td>
            @{
                if (item.GamesPlayedCount == 0)
                {
                    <text>-</text>
                }
                else
                {
                    <text>@($"{(double) item.GamesWonCount / (double) item.GamesPlayedCount}")</text>
                }
            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new {id = item.Id})
        </td>
    </tr>
}

</table>
